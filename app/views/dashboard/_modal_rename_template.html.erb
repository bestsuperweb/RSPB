<!-- Modal 3 (Rename Template)-->
<div class="modal" id="modal-3">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
            <%= form_for :template, url: '/', method: 'put', remote: true, html: { class:'validate', id: 'template-rename-form' } do |f| %>
			<div class="modal-header">
				<h4 class="modal-title"><b>Rename Template</b></h4>
			</div>

			<div class="modal-body">
			    <div class="alert alert-info" id="rename-template-result"></div>
			    <div class="form-group">
			    	<%= f.hidden_field :rename, value: true %>
			        <label class="control-label">New name:</label>
			        <%= f.text_field :template_name , class: 'form-control input-lg', value: '', placeholder: 'Eg.Shoes spring 2016 Millan', 'data-validate': 'required' %>
			    </div>
			</div>

			<div class="modal-footer">
				<div class="pull-right">
				    <a href="javascript:;" class="text-danger" id="rename-cancel" >Cancel</a>
				    <button class="btn btn-blue text-uppercase" id="rename-confirm">rename</button>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>