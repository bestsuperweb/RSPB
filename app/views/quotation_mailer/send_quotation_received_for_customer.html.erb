</head>

  <body>
    <table class="body">
      <tr>
        <td>
          <table class="header row">
  <tr>
    <td class="header__cell">
      <center>

        <table class="container">
          <tr>
            <td>

              <table class="row">
                <tr>
                  <td class="shop-name__cell">
                   <% if defined? @shop.email_logo_url %>
                      <img src="<%= @shop.email_logo_url %>" alt="<%= @shop.name %>" width="<%= @shop.email_logo_width %>">
                   <% else %>
                      <h1 class="shop-name__text">
                        <a href="//<%= @shop.domain  %>" > <%= @shop.name %> </a>
                      </h1>
                    <% end %>
                  </td>

                    <td class="order-number__cell">
                      <span class="order-number__text">
                        Quotation #<%= @quotation.id %>
                      </span>
                    </td>
                </tr>
              </table>

            </td>
          </tr>
        </table>

      </center>
    </td>
  </tr>
</table>

<table class="row content">
<tr>
  <td class="content__cell">
    <center>
      <table class="container">
        <tr>
          <td>

          <h2><%= @email_title %></h2>
          <p><%= @email_body %></p>
               
                  <table class="row actions">
                  <tr>
                    <td class="actions__cell">
                      <table class="button main-action-cell">
                        <tr>
                          <td class="button__cell"><a href="//<%= @shop.domain %>/quotations/<%= @quotation.id%> " class="button__text">View your quotation</a></td>
                        </tr>
                      </table>
                      <% if @shop.domain %>
                        <table class="link secondary-action-cell">
                          <tr>
                            <td class="link__cell"><a href="<%= @shop.domain %>" class="link__text"><span class='or'>or</span> Visit our store</a></td>
                          </tr>
                        </table>
                    <% end %>
    
                    </td>
                  </tr>
                </table>
    
    
    
                </td>
              </tr>
            </table>
          </center>
        </td>
      </tr>
    </table>

  <table class="row section">
  <tr>
    <td class="section__cell">
      <center>
        <table class="container">
          <tr>
            <td>
              <h3>Quotation summary</h3>
            </td>
          </tr>
        </table>
        <table class="container">
          <tr>
            <td>
              <table class="row">
              
             <% @quotation.attributes.each do |q, v| %>
                 <% if q == 'quantity'   %>
                 <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                          
                          </td>
                          <td class="order-list__product-description-cell">
                             <span class="order-list__item-title"><%= q.titleize %></span>
                          </td>
                          <td class="order-list__price-cell">
                          
                            <%= v %>
                         
                            
                          </td>
                        </table>
                      </td>
                    </tr>
                 <% elsif q == 'yearly_quantity_id' and v.to_i > 0  %>
                 <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                        
                          </td>
                          <td class="order-list__product-description-cell">
                            <span class="order-list__item-title"> <%= q.titleize %></span>
                          </td>
                          <td class="order-list__price-cell">
                         
                            <%= v %>
                      
                            
                          </td>
                        </table>
                      </td>
                    </tr>
                 <% elsif q == 'resize_image'  %>
                 <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                          
                          </td>
                          <td class="order-list__product-description-cell">
                             <span class="order-list__item-title"><%= q.titleize %></span>
                          </td>
                          <td class="order-list__price-cell">
                          <% if v == false %>
                             Keep original
                          <% else %>
                            Resize 
                         <% end %>
                            
                          </td>
                        </table>
                      </td>
                    </tr>
                  <% elsif q == 'image_width' and @quotation.resize_image != false  %>
                  <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                         
                          </td>
                          <td class="order-list__product-description-cell">
                             <span class="order-list__item-title"><%= q.titleize %></span>
                          </td>
                          <td class="order-list__price-cell">
                            <% if  v.to_i > 0 %>
                              <%= v %>px
                            <% end %>
                          </td>
                        </table>
                      </td>
                    </tr>
                     <% elsif q == 'image_height' and @quotation.resize_image != false  %>
                  <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                          
                          </td>
                          <td class="order-list__product-description-cell">
                             <span class="order-list__item-title"><%= q.titleize %></span>
                          </td>
                          <td class="order-list__price-cell">
                         <% if  v.to_i > 0 %>
                             <%= v %>px
                          <% end %>
                            
                        
                            
                          </td>
                        </table>
                      </td>
                    </tr>
                    
                 <% else %>
                    
                 <% end %> 
                <% end %>
                
                  <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td>
                          
                          </td>
                          <td class="order-list__product-description-cell">
                            <span class="order-list__item-title">Message</span>
                          </td>
                          <td class="order-list__price-cell">
                         
                            
                          </td>
                        </table>
                      </td>
                    </tr>
                 <tr class="order-list__item">
                      <td class="order-list__item__cell">
                        <table>
                          <td col-span="3">
                          
                          <%= @quotation.message %>
                            
                          </td>
                        </table>
                      </td>
                    </tr>
               
                
                
              </table>
              
            </td>
          </tr>
        </table>
      </center>
    </td>
  </tr>
</table>



          <table class="row footer">
          <tr>
            <td class="footer__cell">
              <center>
                <table class="container">
                  <tr>
                    <td>
                      <p class="disclaimer__subtext">If you have any questions, reply to this email or contact us at <a href="mailto:<%= @shop.email %>"><%= @shop.email %></a></p>
                    </td>
                  </tr>
                </table>
              </center>
            </td>
          </tr>
        </table>

         

        </td>
      </tr>
    </table>
  </body>
</html>
