<%= form_tag [:admin, :turnaround_multipliers], class: "form-horizontal validate" do %>
	<div class="col-xs-offset-4 col-xs-3">
    	<label>Price multiplier</label>
	</div>
	<div class="col-xs-3">
    	<label>Avai. at price <=</label>
	</div>
    <% @turnarounds.each do |turnaround| %>
    	<%= hidden_field_tag "id[]", turnaround.id %>
    	<div class="form-group">
    		<label for="field-1" class="col-xs-4 control-label"><%= turnaround.name %> <%= "(Default)" if turnaround.handle == "24" %></label>
    		<div class="col-xs-3">
    			<%= number_field_tag "multiplier[]",  turnaround.multiplier, max:"9.99",step:"0.01",required: "required", class: "form-control" %>
    		</div>
    		<div class="col-xs-3">
    			<%= number_field_tag "available_at_price[]",  turnaround.available_at_price, min:"10", max:"9999",step:"5",required: "required", class: "form-control" %>
    		</div>
    	</div>
    <%  end %>
	<div class="form-group default-padding">
	    <div class="col-xs-offset-4 col-xs-6">
	    	<%= submit_tag "Save Changes", class: "btn btn-success" %>
		</div>
	</div>
<% end %>