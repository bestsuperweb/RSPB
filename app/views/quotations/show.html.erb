<div class="page-header">
	<h3><%= I18n.t 'quotation.title' %></h3>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="alert alert-info">
			<p><strong><%= I18n.t 'quotation.show.status_l' %></strong> <span class="badge badge-info"><%= (@quotation.status.nil? ? 'nill' : @quotation.status.strip).titleize %></span></p>
		<%= (I18n.t 'quotation.show.status_msg').html_safe if (@quotation.status.nil? ? 'nill' : @quotation.status.strip).capitalize == 'New'  %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="col-sm-6 well">
			
			<%= (I18n.t 'quotation.show.customer.title').html_safe %> <br>
			<strong><%= @customer.first_name %> <%= @customer.last_name %></strong><br>
			<%= @customer.default_address.country_name %>
		</div>
		<div class="col-sm-1">
		</div>
		<div class="col-sm-5 well text-right">
		    <%= I18n.t 'quotation.show.quotation_no_l'%><%= @quotation.id %><br>
			   <%= I18n.t 'quotation.show.quotation_created_date_l'%><%= @quotation.created_at.to_date %>
		</div>
	</div>
</div>

<div class="row" id='quotation-data'>
	<div class="col-sm-12">

		<div class="panel panel-info <%= 'disabled-section' if @quotation.status == 'new' %>" data-collapsed="0">
			<div class="panel-heading">
				<h4 class="panel-title">
					<a data-toggle="collapse" data-parent="#accordion-test-1" href="#collapseOne-1" class="collapsed">
						<i class="entypo-clock"></i>
						  <%= I18n.t 'quotation.show.turnaround.title'%>
					
					</a>
				</h4>
			</div>
			<div class="panel-body">

				<%= form_for @quotation, html: {class: "form-horizontal form-groups-bordered validate"} do |q| %>

					<div class="form-group">
						<%= q.label(:resize_image, class: "col-sm-5 control-label") %>
						<!--<div class="col-sm-6">
							<div class="slider slider-blue" data-postfix=" Hours" data-basic="2" data-min="6" data-max="96" data-value="24" data-step="18"></div>
		    			</div>-->
		    			<div class="col-sm-7">
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "6") %>
		    						<%= q.label(:resize_image_6, '6 Hours') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "12") %>
		    						<%= q.label(:resize_image_12, '12 Hours') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "24") %>
		    						<%= q.label(:resize_image_24, '24 Hours') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "48") %>
		    						<%= q.label(:resize_image_48, '48 Hours') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "96") %>
		    						<%= q.label(:resize_image_96, '96 Hours') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "168") %>
		    						<%= q.label(:resize_image_96, '96+ Hours') %>
		    					</label>
		    				</div>
	    				</div>
					</div>

					<div class="form-group" id="prev-quote">
						<%= q.label(:quantity, class: "col-sm-5 control-label") %>
						<div class="col-sm-7">
							<div class="input-spinner">
								<button type="button" class="btn btn-default">-</button>
								<%= q.text_field(:quantity, class: "form-control size-1", data: {min: '1', max: '10000'}, "data-validate" => "number,required") %>
								<button type="button" class="btn btn-default">+</button>
							</div>
						</div>
					</div>

					<br>

					<div class="row">
						<div class="col-sm-8">

							<div class="list-group" id="selc-service-items">
							    
							</div>

							<p><i>Original message: I would like background removed.. <a href="#">show full message</a></i></p>

						</div>
						<div class="col-sm-4 text-right">
							<div class="panel panel-success" data-collapsed="0">
								<div class="panel-body"  id='quotation-cart'>
									
								</div>
							</div>
						</div>
					</div>

					<hr>

					<div class="row">
						<div class="col-sm-12">

				    		<div class="form-group">
								<%= q.label(:return_file_format, "Return file format", class: "col-sm-5 control-label") %>
				    			<div class="col-sm-7">
									<%= q.select(:yearly_quantity_id, [['JPG'], ['PNG'], ['PSD'], ['TIFF']], {:include_blank => 'Select..'}, {:class => "form-control",  "data-validate" => "required"}) %>
				    			</div>
				    		</div>

				    		<div class="form-group">
				    			<div class="col-sm-offset-5 col-sm-7">
									<div class="checkbox">
										<label>
											<input type="checkbox" checked="checked">Straighten, crop and set margin (FREE)
										</label>
										<a href="#"><small>Learn more</small></a>
									</div>
								</div>
				    		</div>

							<div class="form-group">
				    			<label class="col-sm-5 control-label">Output image size</label>
				    			<div class="col-sm-7">
				    				<div class="radio-inline">
				    					<label>
				    						<%= q.radio_button(:resize_image, "true") %>
				    						<%= q.label(:resize_image_1, 'Resize to') %>
				    					</label>
				    				</div>
				    				<div class="radio-inline">
				    					<label>
				    						<%= q.radio_button(:resize_image, "false") %>
				    						<%= q.label(:resize_image_0, 'Keep original size') %>
				    					</label>
				    				</div><br>
				    				<div class="form-inline">
					    				<%= q.label(:image_width, "Width") %>
				                        <div class="input-group">
				                            <%= q.text_field(:image_width, size: 4, class: "form-control", minlength: 1, maxlength: 4) %>
				                            <span class="input-group-addon">px</span>
										</div>
				                        <%= q.label(:image_height, "Height") %>
				                        <div class="input-group">
				                            <%= q.text_field(:image_height, size: 4, class: "form-control", minlength: 1, maxlength: 4) %>
				                            <span class="input-group-addon">px</span>
										</div>
									</div>
				    			</div>
				    		</div>

							<div class="form-group">
				    			<%= q.label(:message, "Additional comment (optional)", class: "col-sm-5 control-label") %>
				    			<div class="col-sm-7">
				    				<%= q.text_area :message, class: "form-control", placeholder: "Just in case you have anything else to add..", "data-validate" => "required" %>
				    			</div>
				    		</div>

				    		<div class="form-group">
				    			<div class="col-sm-offset-5 col-sm-7">
				    				<%= q.submit("ADD TO CART", class: "btn btn-blue btn-lg") %>
				    			</div>
				    		</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>



