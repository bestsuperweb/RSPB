				<%= form_for @quotation, html: {class: "form-horizontal form-groups-bordered"} do |q| %>

					<% if @customer.errors.any? || @quotation.errors.any? %>
						<div class="alert alert-danger">
							<strong>Please correct the following error(s) and try again:</strong>
							<ul>
							<% if @customer.errors.any? %>
								<% @customer.errors.full_messages.each do |msg| %>
			          				<li><%= msg %></li>
			        			<% end %>
		        			<% end %>
		        			<% if @quotation.errors.any? %>
								<% @quotation.errors.full_messages.each do |msg| %>
			          				<li><%= msg %></li>
			        			<% end %>
		        			<% end %>
							</ul>
						</div>
					<% end %>

				{% if customer %}
					<%= hidden_field_tag(:customer_id, "{{customer.id}}") %>
				{% else %}
				  	<%= fields_for @customer do |c| %>

			    		<div class="form-group">
			    			<%= c.label(:first_name, "First name", class: "col-sm-5 control-label") %>
			    			<div class="col-sm-7">
			    				<%= c.text_field(:first_name, class: "form-control", placeholder: "John") %>
			    			</div>
			    		</div>

			    		<div class="form-group">
			    			<%= c.label(:last_name, "Last name", class: "col-sm-5 control-label") %>
			    			<div class="col-sm-7">
			    				<%= c.text_field(:last_name, class: "form-control", placeholder: "Doe") %>
			    			</div>
			    		</div>

			    		<div class="form-group">
			    			<%= c.label(:email, "E-mail", class: "col-sm-5 control-label") %>
			    			<div class="col-sm-7">
			    				<%= c.email_field(:email, class: "form-control", placeholder: "example@domain.com") %>
			    			</div>
			    		</div>

					<% end %>
				{% endif %}

		    		<div class="form-group">
		    			<%= q.label(:message, "Let us know what to do with your images", class: "col-sm-5 control-label") %>
		    			<div class="col-sm-7">
		    				<%= q.text_area :message, class: "form-control" %>
		    			</div>
		    		</div>

		    		<div class="form-group">
						<%= q.label(:quantity, "How many images should we provide a quote for?", class: "col-sm-5 control-label") %>
						<div class="col-sm-7">
							<div class="input-spinner">
								<button type="button" class="btn btn-default">-</button>
								<%= q.text_field(:quantity, class: "form-control size-1", data: {min: '1', max: '10000'}) %>
								<button type="button" class="btn btn-default">+</button>
							</div>
						</div>
					</div>

		    		<div class="form-group">
						<%= q.label(:yearly_quantity_id, "How many images do you need edited on a yearly basis?", class: "col-sm-5 control-label") %>
		    			<div class="col-sm-7">
							<%= q.collection_select(:yearly_quantity_id, YearlyQuantity.all, :id, :yearly_quantity_label, {:include_blank => 'Select..'}, {:class => "form-control"}) %>

		    			</div>
		    		</div>

		    		<div class="form-group">
		    			<label class="col-sm-5 control-label">Output image size</label>
		    			<div class="col-sm-7">
		    			    <p class="help-block">Resizing is free and we offer discount for choosing smaller image size, as they are quicker to process.</p>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "1") %>
		    						<%= q.label(:resize_image_1, 'Resize to') %>
		    					</label>
		    				</div>
		    				<div class="radio-inline">
		    					<label>
		    						<%= q.radio_button(:resize_image, "0") %>
		    						<%= q.label(:resize_image_0, 'Keep original size') %>
		    					</label>
		    				</div><br>
		    				<div class="form-inline">
			    				<%= q.label(:image_width, "Width") %>
		                        <div class="input-group">
		                            <%= q.text_field(:image_width, size: 4, class: "form-control", minlength: 1, maxlength: 4) %>
		                            <span class="input-group-addon">px</span>
								</div>
		                        <%= q.label(:image_height, "Height") %>
		                        <div class="input-group">
		                            <%= q.text_field(:image_height, size: 4, class: "form-control", minlength: 1, maxlength: 4) %>
		                            <span class="input-group-addon">px</span>
								</div>
							</div>
		    			</div>
		    		</div>

		    		<div class="form-group">
		    			<div class="col-sm-offset-5 col-sm-7">
		    				<%= q.submit("GET QUOTE", class: "btn btn-blue btn-lg") %>
		    			</div>
		    		</div>
		    	<% end %>